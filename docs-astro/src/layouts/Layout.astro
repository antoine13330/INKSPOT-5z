---
const { title = "INKSPOT Docs", description = "" } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <style>
      :root {
        --bg: #0f172a;
        --panel: #111827;
        --text: #e5e7eb;
        --muted: #94a3b8;
        --accent: #38bdf8;
        --border: #1f2937;
      }
      * { box-sizing: border-box; }
      body {
        margin: 0;
        font-family: "Inter", system-ui, -apple-system, sans-serif;
        background: var(--bg);
        color: var(--text);
        line-height: 1.6;
      }
      a { color: var(--accent); text-decoration: none; }
      a:hover { text-decoration: underline; }
      header, main, nav, footer { width: 100%; }
      .shell {
        max-width: 1100px;
        margin: 0 auto;
        padding: 24px 20px 64px;
      }
      .nav {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
        padding: 12px 0 20px;
      }
      .pill {
        padding: 8px 14px;
        border: 1px solid var(--border);
        border-radius: 999px;
        background: #0b1220;
      }
      h1 { font-size: 28px; margin: 12px 0 8px; }
      h2 { font-size: 22px; margin: 24px 0 10px; }
      h3 { font-size: 18px; margin: 16px 0 8px; }
      section {
        background: var(--panel);
        border: 1px solid var(--border);
        border-radius: 12px;
        padding: 18px;
        margin-bottom: 14px;
      }
      ul { margin: 8px 0 8px 18px; }
      .muted { color: var(--muted); }
      .tag {
        display: inline-block;
        padding: 4px 10px;
        border-radius: 8px;
        background: #0b1220;
        border: 1px solid var(--border);
        font-size: 12px;
        color: var(--muted);
      }
      .grid {
        display: grid;
        gap: 12px;
      }
      .grid.two {
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      }
      .code {
        font-family: "JetBrains Mono", "Fira Code", monospace;
        background: #0b1220;
        padding: 4px 6px;
        border-radius: 6px;
        border: 1px solid var(--border);
      }
    </style>
  </head>
  <body>
    <div class="shell">
      <header>
        <h1>{title}</h1>
        {description && <p class="muted">{description}</p>}
        <nav class="nav">
          <a class="pill" href="/">Accueil</a>
          <a class="pill" href="/mut">MUT</a>
          <a class="pill" href="/deploiement-railway">DÃ©ploiement Railway</a>
          <a class="pill" href="/cahier-recette">Cahier de Recette</a>
          <a class="pill" href="/changelog">Changelog</a>
        </nav>
      </header>
      <main>
        <slot />
      </main>
    </div>
  </body>
</html>
