# Database
DATABASE_URL="postgresql://username:password@localhost:5432/social_media_pro"

# NextAuth Configuration
NEXTAUTH_SECRET="your-nextauth-secret-key-here-make-it-long-and-random"
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth (https://console.developers.google.com/)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Apple OAuth (https://developer.apple.com/)
APPLE_ID="your-apple-client-id"
APPLE_SECRET="your-apple-client-secret"

# Email Server Configuration (SMTP)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="mailto:noreply@yourdomain.com"

# Stripe Configuration (https://dashboard.stripe.com/)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# AWS S3 Configuration (https://aws.amazon.com/s3/)
AWS_REGION="eu-west-1"
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_S3_BUCKET_NAME="your-s3-bucket-name"

# Push Notifications (VAPID) - Generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"

# Development
NODE_ENV="development"