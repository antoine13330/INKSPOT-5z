# Railway Environment Variables Template
# Copy this file and fill in your actual values in Railway dashboard

# Database
DATABASE_URL=postgresql://username:password@host:port/database

# NextAuth
NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=https://your-app.railway.app

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_APPOINTMENTS_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Email
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# VAPID Keys for Push Notifications
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key

# WebSocket
NEXT_PUBLIC_WS_URL=wss://your-app.railway.app

# App URL
NEXT_PUBLIC_APP_URL=https://your-app.railway.app

# Redis (optional)
REDIS_URL=redis://username:password@host:port

# Performance Monitoring (optional)
APM_ENABLED=false
APM_ENDPOINT=
APM_API_KEY=
APM_SAMPLE_RATE=1.0
APM_MAX_EVENTS=1000

# Security (optional)
ENCRYPTION_KEY=your-encryption-key
SECURITY_SERVICE_URL=
SECURITY_SERVICE_TOKEN=
EXTERNAL_LOGGING_URL=
EXTERNAL_LOGGING_TOKEN=
PERFORMANCE_MONITORING_URL=
PERFORMANCE_MONITORING_TOKEN=
